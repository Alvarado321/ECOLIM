<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Conocenos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:titleTextColor="@android:color/white"
        android:background="@drawable/background_toolbar" />

    <!-- Imagen de encabezado -->

    <!-- Tarjeta de historia de la empresa -->

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:padding="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_ecolim"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHistoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtHistoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historia de la Empresa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtHistoriaDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desde su fundaci贸n, ECOLIM se ha dedicado a la recolecci贸n y manejo eficiente de residuos s贸lidos..."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tarjeta de valores de la empresa -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardValores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardHistoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtValores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestros Valores"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtValoresDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compromiso, Innovaci贸n, Sostenibilidad, Responsabilidad Social y Trabajo en Equipo."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tarjeta de informaci贸n de contacto -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardValores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtContacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cont谩ctanos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Tel茅fono: +51 999 888 777"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锔 Email: contacto@ecolim.com"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/txtDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Direcci贸n: Av. Principal 123, Trujillo, Per煤"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
